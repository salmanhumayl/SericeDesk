
@{
    ViewBag.Title = "CashRegister";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css" />
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.12.4.min.js"></script>

<script src="~/Scripts/bootstrap.js"></script>

<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#FromDate').datetimepicker({
            defaultDate: new Date(),
            //  minDate: new Date(),
            // maxDate: new Date(new Date().setDate(todayDate + 30)),
            //format: "DD/MM/YYYY"
            format: 'DD MMM YYYY',

        });


        $('#ToDate').datetimepicker({
            defaultDate: new Date(),
            //  minDate: new Date(),
            // maxDate: new Date(new Date().setDate(todayDate + 30)),
            //format: "DD/MM/YYYY"
            format: 'DD MMM YYYY',

        });
    });



    function GenericPrint() {


        var url = "";
        var Parameters = { "mFromDate": "", "mToDate": "" }
        Parameters.mFromDate = $('#FromDate').data('date');
        Parameters.mToDate = $('#ToDate').data('date')

        url = "CashRegisterProcess?mFromDate=" + Parameters.mFromDate + "&mToDate=" + Parameters.mFromDate;
        
        $("#load").attr("src", url);

        
    }
</script>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-money fa-fw"></i>Cash Register</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">

                @using (Html.BeginForm("CashRegister", "Report", FormMethod.Post))
                {
                <table class="table table-striped">
                    <tr>
                        <td>From Date: </td>
                        <td>
                            <div class='input-group date' id="FromDate" style="width:50px">
                                <input type='text' class="form-control" style="width:150px" name="mFromDate" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </td>

                        <td>To Date:</td>
                        <td>
                            <div class='input-group date' id="ToDate" style="width:50px">
                                <input type='text' class="form-control" style="width:150px" name="mToDate" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </td>
                    </tr>


                    <tr>
                        <td>
                        
                            @*<div class="col-md-10">
                                <iframe src="@Url.Action("Pdf", "Home")" height="500" width="100%"></iframe>
                            </div>*@
                        
                        <input type="button" value="Print" id="btnShowReport" class="btn btn-primary" name="ButtonType"  onclick="GenericPrint()"/></td>
                    
                     
                    </tr>
                   
                </table>
                }

                </div>
</div>
</div>
</div>
<iframe id="load" src="" height="500" width="100%"></iframe>