@model IEnumerable<AJCCFM.Models.GroupRequest.SharefolderModel.ShareFolderPending>

@{
    Layout = null;
}
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="CustomerGrid">
                    <thead>
                        <tr>
                            <th>RefNo</th>
                            <th>EmpNo</th>
                            <th>Name</th>
                            <th>Requested On</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>


                            <td>
                                <b>@Html.DisplayFor(modelItem => item.RefNo)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            
                            <td>
                                @item.CreatedOn.ToString("dd-MM-yyyy")
                            </td>
                            <td>
                                @Html.ActionLink("Click here to Approve", "ViewRequest","GroupRequest",new { TransactionID = item.ID },new { @class = "btn btn-danger btn-sm" })
                            </td>



                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

 