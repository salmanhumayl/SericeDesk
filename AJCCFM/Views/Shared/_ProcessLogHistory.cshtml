@model IEnumerable<AJCCFM.Models.LogHistoryModel>

<div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-12">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
        </div>

        <div class="card-body">

            <table class="table table-bordered table-hover table-striped">
                <thead>

                    <tr>

                        <th>Status</th>
                        <th>Process By</th>
                        <th>Process On</th>
                        <th>Submitted To</th>
                        <th>Remarks</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @if (item.Status == "Rejected")
                            {
                                <b><font style="color:Red">@item.Status</font></b>
                            }
                            else
                            {
                                if (item.Status == "Approved")
                                {
                                    <b><font style="color:green">@item.Status</font></b>
                                }
                                else
                                {
                                    <b><font style="color:red">@item.Status</font></b>
                                }
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.ProcessBy)
                        </td>
                        <td>@item.ProcessOn.ToString("dd/MM/yyyy hh:mm:ss tt")</td>
                        <td>@Html.DisplayFor(modelitem => item.Submittedto)</td>
                        <td>@Html.DisplayFor(modelitem => item.Remarks)</td>



                    </tr>
                    }
                </tbody>

            </table>

        </div>


    </div>
</div>
